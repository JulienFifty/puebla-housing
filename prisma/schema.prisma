// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("owner") // owner, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  properties    Property[]
}

model Property {
  id            String    @id @default(cuid())
  nameEs        String
  nameEn        String
  slug          String    @unique
  locationEs    String
  locationEn    String
  address       String
  zone          String    // tres-cruces, centro, cholula
  university    String    // BUAP, Centro, UDLAP
  descriptionEs String
  descriptionEn String
  totalRooms    Int       @default(0)
  available     Boolean   @default(true)
  images        String    // JSON array of image URLs
  bathroomTypes String   // JSON array: ["private", "shared"]
  googlePlaceId String?  // Google Place ID para obtener rese√±as de Google My Business
  ownerId       String?
  owner         User?     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  rooms         Room[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Room {
  id            String    @id @default(cuid())
  propertyId    String
  property      Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  roomNumber    String
  type          String    // private, shared
  bathroomType  String    // private, shared
  descriptionEs String
  descriptionEn String
  images        String    // JSON array of image URLs
  available     Boolean   @default(true)
  semester      String?   // enero-junio-2026, junio-diciembre-2026
  amenities     String    // JSON array of amenities
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([propertyId])
  @@index([semester])
  @@index([available])
}
